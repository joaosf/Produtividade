<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dummyfrag_bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indicator_unselected">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
      <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <CheckBox
                android:id="@+id/checkDomingo"
                android:layout_width="117dp"
                android:layout_height="32dp"
                android:text="Domingo"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkSegunda"
                app:layout_constraintHorizontal_bias="0.254"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkSegunda"
                android:layout_width="151dp"
                android:layout_height="32dp"
                android:text="Segunda - Feira"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.294"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkTerca"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkTerca"
                android:layout_width="122dp"
                android:layout_height="32dp"
                android:text="Terça - Feira"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.256"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkQuarta"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkQuarta"
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:text="Quarta - Feira"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.257"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkQuinta"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkQuinta"
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:text="Quinta - Feira"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.257"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkSexta"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkSexta"
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:text="Sexta - Feira"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.257"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/checkSabado"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <CheckBox
                android:id="@+id/checkSabado"
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:text="Sábado"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.257"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="125dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="31dp"
                android:onClick="btnOk"
                android:text="OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/checkDomingo"
                android:layout_marginStart="6dp"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="4dp"
                app:layout_constraintLeft_toLeftOf="@+id/checkDomingo" />
        </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>