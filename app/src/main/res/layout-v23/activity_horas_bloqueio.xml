<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.produtividade.HorasBloqueioActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtLabelManha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:text="Manhã:"
                android:gravity="center"

                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lasodhasoidjio"
                android:layout_width="wrap_content"
                android:textColor="@color/textPrimary"
                android:layout_height="wrap_content"
                android:text="Hora de início:"
                android:layout_marginLeft="10dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                />

            <TextView
                android:id="@+id/txtHoraInicioManha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.8"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <Button
                android:id="@+id/btnEscolherInicioManha"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:onClick="timePickerInicioManha"
                android:text="Escolher" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtHoraInicioFim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textPrimary"
                android:text="Hora de fim:"/>

            <TextView
                android:id="@+id/txtHoraFimManha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.8"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <Button
                android:id="@+id/btnEscolherFimManha"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:onClick="timePickerFimManha"
                android:text="Escolher" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtLabelTarde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarde:"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLabelHoraInicioTarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hora de início:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/txtHoraInicioTarde"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/textPrimary"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <Button
                android:id="@+id/btnEscolherInicioTarde"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:onClick="timePickerInicioTarde"
                android:text="Escolher" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtLabelHoraFimTarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de fim:"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textPrimary"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

        <TextView
            android:id="@+id/txtHoraFimTarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.8"
            android:textColor="@color/textPrimary"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

        <Button
            android:id="@+id/btnEscolherFimTarde"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/colorAccent"
            android:onClick="timePickerFimTarde"
            android:text="Escolher" />
    </LinearLayout>

        <Button
            android:id="@+id/btnSalvarHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="@color/colorAccent"
            android:onClick="salvar"
            android:text="OK" />











    </LinearLayout>

</RelativeLayout>
